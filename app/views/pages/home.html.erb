
<div class="container py-5 background-green mb-5">
  <div class="cover mb-4 d-flex align-items-center justify-content-center">
    <div class="text-center text-black">
      <h3 class="typed-js" data-controller="typed-js"></h3>
    </div>
  </div>


  <div class="carrosel-card">
    <div class="text-center text-black">
      <h3 class="mb-0">News Post</h3>
      <%= link_to "Go to the newest pets", pets_path, class: 'btn btn-success align-items-end m-3' %>
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @pets.each_with_index do |pet, index| %>
          <div class="carousel-item  <%=  'active' if index == 0   %>">
            <%= cl_image_tag pet.photo.key, alt: "1 ", class: "carousel-img" %>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

